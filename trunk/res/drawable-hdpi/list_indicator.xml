<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_empty="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item 
                android:bottom="0dp" 
                android:drawable="@drawable/list_closed" 
                android:left="0dp" android:right="0dp" 
                android:top="0dp"></item>
        </layer-list>
    </item>
    <item android:drawable="@drawable/list_opened" android:state_expanded="true"></item>
    <item android:drawable="@drawable/list_closed"></item>

</selector>