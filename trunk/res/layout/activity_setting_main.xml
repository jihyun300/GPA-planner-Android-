<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:id="@+id/goalLayout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/child_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.50"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="true"
                android:src="@drawable/splash_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="9.5dp"
                android:gravity="center_horizontal"
                   android:textColor="@color/font_color_black"
                android:text="@string/setting_scale" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio43"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/st_pup_circle_dy"
                    android:gravity="center"
                    android:text="4.3"
                    android:textColor="#ffffff"
                    android:textSize="27dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio45"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/st_pup_circle_dy"
                    android:gravity="center"
                    android:text="4.5"
                    android:textColor="#ffffff"
                    android:textSize="27dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1" />
        </RadioGroup>
        
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/splash_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.50"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="true"
                android:src="@drawable/splash_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="9.5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/font_color_black"
                android:text="@string/setting_goal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editgoal_majorSetting"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/splash_major_circle"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textColorHint="#E6E6E6"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editgoal_liberalSetting"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/splash_liberalarts_circle"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textColorHint="#E6E6E6"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1" />
        </LinearLayout>

     
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/splash_top" />
    
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.11"
          android:orientation="vertical"
          android:layout_marginTop="20dp" >

           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="9dp"
                android:text="다음학기의 목표학점을 설정해 주세요."/>
                </LinearLayout>
                
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1" />

    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editTarget_Setting"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/st_pup_circle_dy"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="27dp"
                        android:textStyle="bold"
                        android:hint="몇점"
                        android:textColorHint="#E6E6E6"
                        android:textCursorDrawable="@null"
                        android:inputType="number"
                        />

                
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1" />
            </LinearLayout>
            </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@drawable/splash_paper1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@drawable/splash_paper2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@drawable/splash_paper3" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@drawable/splash_bottom" />

</LinearLayout>
</ScrollView>